<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="8dp" >

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:focusable="false"
        android:layout_marginTop="8dp"
        android:contentDescription="@+id/image_product"
        android:src="@drawable/ic_drawer" />

    <TextView
        android:id="@+id/name_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_product"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/rrp_product"
        android:layout_toRightOf="@+id/image_product"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rrp_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name_product"
        android:layout_alignBottom="@+id/name_product"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:textColor="@color/yellow_dark" />

    <TextView
        android:id="@+id/text_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity"
        android:layout_alignLeft="@+id/name_product"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="4dp" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/text_quantity" />

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/quantity"
        android:layout_alignRight="@+id/rrp_product"
        android:textStyle="bold" />

</RelativeLayout>
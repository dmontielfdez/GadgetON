<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Mitheme" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_mitheme</item>
        <item name="popupMenuStyle">@style/PopupMenu.Mitheme</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mitheme</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Mitheme</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Mitheme</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Mitheme</item>
        <item name="actionModeBackground">@drawable/cab_background_top_mitheme</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_mitheme</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mitheme</item>
        <item name="android:editTextStyle">@style/EditTexttheme_green</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewtheme_green</item>
        <item name="android:radioButtonStyle">@style/RadioButtontheme_green</item>
        <item name="android:listViewStyle">@style/ListViewtheme_green</item>
        <item name="android:listViewWhiteStyle">@style/ListViewtheme_green.White</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemtheme_green</item>
    </style>

    <style name="ActionBar.Solid.Mitheme" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_mitheme</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mitheme</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_mitheme</item>
        <item name="progressBarStyle">@style/ProgressBar.Mitheme</item>
    </style>

    <style name="ActionBar.Transparent.Mitheme" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_mitheme</item>
        <item name="progressBarStyle">@style/ProgressBar.Mitheme</item>
    </style>

    <style name="PopupMenu.Mitheme" parent="@style/Widget.Sherlock.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mitheme</item>
    </style>

    <style name="DropDownListView.Mitheme" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mitheme</item>
    </style>

    <style name="ActionBarTabStyle.Mitheme" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mitheme</item>
    </style>

    <style name="DropDownNav.Mitheme" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_mitheme</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mitheme</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_mitheme</item>
    </style>

    <style name="ProgressBar.Mitheme" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mitheme</item>
    </style>

    <style name="ActionButton.CloseMode.Mitheme" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mitheme</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mitheme.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Mitheme</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mitheme</item>
    </style>

    <style name="categorias">
        <item name="android:textColor">#fff</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="EditTexttheme_green" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AutoCompleteTextViewtheme_green" parent="android:Widget.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="RadioButtontheme_green" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="ListViewtheme_green" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="ListViewtheme_green.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="SpinnerItemtheme_green" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
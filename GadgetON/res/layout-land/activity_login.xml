<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true" >

        <EditText
            android:id="@+id/password_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/email_login"
            android:layout_alignRight="@+id/email_login"
            android:layout_below="@+id/email_login"
            android:layout_marginTop="20dp"
            android:background="#333"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="#fff" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/password_login"
            android:layout_alignRight="@+id/password_login"
            android:layout_below="@+id/password_login"
            android:layout_marginTop="20dp"
            android:background="#3E7B3E"
            android:text="@string/login"
            android:textColor="@color/base" />

        <ImageView
            android:id="@+id/banner"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="38dp"
            android:layout_toLeftOf="@+id/password_login"
            android:contentDescription="@+id/banner"
            android:src="@drawable/banner" />

        <EditText
            android:id="@+id/email_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/banner"
            android:layout_marginRight="39dp"
            android:background="#333"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColorHint="#fff" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" >

        <View
            android:id="@+id/line1"
            android:layout_width="70dp"
            android:layout_height="5dp"
            android:layout_marginTop="44dp"
            android:background="@color/yellow" />

        <View
            android:id="@+id/line2"
            android:layout_width="70dp"
            android:layout_height="5dp"
            android:layout_alignBottom="@+id/line1"
            android:layout_toRightOf="@+id/line1"
            android:background="@color/red" />

        <View
            android:id="@+id/line3"
            android:layout_width="70dp"
            android:layout_height="5dp"
            android:layout_alignBottom="@+id/line2"
            android:layout_toRightOf="@+id/line2"
            android:background="@color/green" />

        <View
            android:id="@+id/line4"
            android:layout_width="70dp"
            android:layout_height="5dp"
            android:layout_alignBottom="@+id/line3"
            android:layout_toRightOf="@+id/line3"
            android:background="@color/blue" />

        <TextView
            android:id="@+id/text_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/line2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:textColor="#111" />
    </RelativeLayout>

</RelativeLayout>
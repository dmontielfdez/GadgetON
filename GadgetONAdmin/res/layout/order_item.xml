<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="8dp" >

    <TextView
        android:id="@+id/id_order"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/text_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/id_order"
        android:text="02/05/2013 -"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/total_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_order"
        android:layout_alignParentRight="true"
        android:text="123,8â‚¬"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/state_order"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_alignBaseline="@+id/text_order"
        android:layout_alignBottom="@+id/text_order"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/text_order"
        android:padding="1dp"
        android:textStyle="bold"
        android:text="Preparando"
        android:textColor="#fff"
        android:textIsSelectable="false" />

</RelativeLayout>